{
  "extends": "@homarr/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "typeRoots": ["node_modules/@types", "node_modules/@homarr/ui/src/theme"],
    "types": ["theme.other"]
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next"]
}
