{
  "name": "@homarr/server",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "main": "./src/main.ts",
  "types": "./src/main.ts",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --platform=node --loader:.scss=text --loader:.html=text --external:*.node --external:@opentelemetry/api --external:deasync --external:bcrypt --external:cpu-features --outfile=server.cjs",
    "clean": "rm -rf .turbo node_modules",
    "dev": "pnpm with-env tsx ./src/main.ts",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "prettier": "@homarr/prettier-config",
  "dependencies": {
    "@homarr/api": "workspace:^0.1.0",
    "@homarr/auth": "workspace:^0.1.0",
    "@homarr/common": "workspace:^0.1.0",
    "@homarr/core": "workspace:^",
    "@homarr/cron-job-api": "workspace:^0.1.0",
    "@homarr/cron-jobs": "workspace:^0.1.0",
    "@homarr/db": "workspace:^0.1.0",
    "@homarr/definitions": "workspace:^0.1.0",
    "@homarr/request-handler": "workspace:^0.1.0",
    "@trpc/server": "",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "node-cron": "^4.2.1",
    "undici": "7.16.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@homarr/eslint-config": "workspace:^0.2.0",
    "@homarr/prettier-config": "workspace:^0.1.0",
    "@homarr/tsconfig": "workspace:^0.1.0",
    "@types/node": "^24.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "dotenv-cli": "^11.0.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "tsx": "4.20.4",
    "typescript": "^5.9.3"
  }
}
